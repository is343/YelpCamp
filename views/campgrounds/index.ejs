<% include ../partials/header %>

<div class='container'>
    <header class='jumbotron'>
        <!--adding another container to keep the spacing correct on small screens-->
        <div class="container">
        <h1>Welcome to YelpCamp!</h1>
        <p>Various campgrounds from all over the world.</p>
         <a class='btn btn-primary btn-lg' href='/campgrounds/new'>Add a new campground</a>
        </div>
    </header>
    
    
   <div class="row">
       <div class="col-lg-12">
           <h2>Most Popular</h2>
       </div>
   </div>
   
   <div class="row">
       
        <% campgrounds.forEach(function(camp){ %>
            <div class='col-6 col-md-3 text-center' style='border: 1px solid black; background-color: lightgrey;'> 
                <div class="caption">
                    <h3><%= camp['name'] %> </h3>
                </div>
                <div class="thumbnail">
                    <img class='img-fluid' src= ' <%= camp['image'] %> ' alt= ' <%= camp['name'] %> '> 
                </div>
                <p>
                    <a href='/campgrounds/<%= camp._id %>' class='btn btn-primary'>More Info</a>
                </p>
            </div>
        <% }); %>
    
   </div>
   
   
</div>

<% include ../partials/footer %>