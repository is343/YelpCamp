<% include ../partials/header %>
<div class="container">
    <h1 style='text-align: center;'>Edit Comment</h1>
    <div class="row">
        
        <div style='width: 50%; margin: 25px auto; '>
            <form action='/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT' method='POST'>
                <div class="form-group">
                    <textarea class="form-control"  rows="3" type='text' name='comment[text]' ><%= comment.text %></textarea>
                </div>
                <div class="form-group">
                    <input class='form-control btn-block btn btn-primary' type='submit'>
                </div>
            </form>
            <a href='/campgrounds'>Back</a>
        </div>
        
    </div>
</div>


